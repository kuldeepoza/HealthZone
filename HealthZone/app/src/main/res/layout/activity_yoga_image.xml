<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="healthzone.com.example.kuldeep.healthzone.HealthCareImages"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yoga Image"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center"
        android:textColor="#ffffffff" />
    <ScrollView
        android:layout_below="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentStart="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_below="@+id/textView18"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView2"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms5"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView3"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms1"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView4"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms2"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView5"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms4"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView6"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms3"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />

            </LinearLayout>
    </ScrollView>
</RelativeLayout>