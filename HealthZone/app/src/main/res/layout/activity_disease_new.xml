<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="healthzone.com.example.kuldeep.healthzone.DiseaseNew"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Extra"
        android:id="@+id/ExtraDisease"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="#3dff8800" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/ExtraListview"
        android:layout_below="@+id/ExtraDisease"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blood"
        android:id="@+id/BloodP"
        android:padding="10dp"
        android:background="#3dff8800"
        android:layout_below="@+id/ExtraListview"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/BloodPView"
        android:layout_below="@+id/BloodP"
        android:layout_alignParentStart="true"
        android:visibility="gone" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blood"
        android:id="@+id/Dibetice"
        android:padding="10dp"
        android:background="#3dff8800"
        android:layout_below="@+id/BloodPView"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/DibeticeListView"
        android:layout_below="@+id/Dibetice"
        android:visibility="gone" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blood"
        android:id="@+id/Hedeque"
        android:padding="10dp"
        android:background="#3dff8800"
        android:layout_below="@+id/DibeticeListView"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/HedequeListView"
        android:layout_below="@+id/Hedeque"
        android:visibility="gone" />


</RelativeLayout>
