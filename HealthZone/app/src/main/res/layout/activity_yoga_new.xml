<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="healthzone.com.example.kuldeep.healthzone.HealthCareImages"
    android:background="@android:color/holo_orange_light"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <ScrollView
        android:layout_below="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_below="@+id/textView18"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview">


            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView2"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms5"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView3"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms1"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView4"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms2"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView5"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms4"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="350dp"

                android:id="@+id/imageView6"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:src="@drawable/yoga_arms3"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>