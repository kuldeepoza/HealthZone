<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="healthzone.com.example.kuldeep.healthzone.ChartDays"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome Sir!!"
        android:id="@+id/textView20"
        android:textColor="#ff000000"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#9aff8717" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hear we help you to redure or increase your weight. So just follow the instructions and work for your body.So try to do your work."
        android:id="@+id/textView21"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="#6fff8717"
        android:padding="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="15dp"
        android:text="Generate Chart"
        android:id="@+id/chartOther"
        android:textSize="27dp"
        android:background="#aaff8717"
        android:textColor="#ffffffff"

        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_marginTop="3dp"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:id="@+id/imageView11"
        android:src="@drawable/veg"
        android:scaleType="fitXY"
        android:layout_below="@+id/textView21"
        android:layout_alignStart="@+id/chartOther" />


</RelativeLayout>
